<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-inline" action="/" method="POST">
            <fieldset>
                <div class="form-group">
                    <div class="col-sm-4 ">
                        <select class="form-control" name="converter[inputCurrencyType]">
                            <option value="BGN"{{selectif converter.inputCurrencyType 'BGN'}}>BGN</option>
                            <option value="USD"{{selectif converter.inputCurrencyType 'USD'}}>USD</option>
                            <option value="GBP"{{selectif converter.inputCurrencyType 'GBP'}}>GBP</option>
                            <option value="EUR"{{selectif converter.InputCurrencytype 'EUR'}}>EUR</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-1 ">
                        <input type="text" class="form-control" id="value" placeholder="Value"
                               name="converter[value]" value="{{converter.value}}">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 ">
                        <p><=></p>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4 ">
                        <select class="form-control" name="converter[outputCurrencyType]">
                            <option value="BGN"{{selectif converter.outputCurrencyType 'BGN'}}>BGN</option>
                            <option value="USD"{{selectif converter.outputCurrencyType 'USD'}}>USD</option>
                            <option value="GBP"{{selectif converter.outputCurrencyType 'GBP'}}>GBP</option>
                            <option value="EUR"{{selectif converter.outputCurrencytype 'EUR'}}>EUR</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 ">
                        <p>=></p>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="result" placeholder="Result"
                               name="result" value="{{result}}">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <button type="submit" class="btn btn-primary">Convert</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
